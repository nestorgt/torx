# Proxy Banks Configuration Template
# Copy this file to .secrets/.env and fill in your actual values

# Server Configuration
PORT=8081

# Token del proxy (para header x-proxy-token)
PROXY_TOKEN=your_proxy_token_here

# mTLS (cert cliente) para Revolut
CLIENT_CERT_PATH=/path/to/your/client.cert.pem
CLIENT_KEY_PATH=/path/to/your/client.key.pem

# OAuth Revolut
CLIENT_ID=your_revolut_client_id_here
REDIRECT_URI=https://your-domain.com
ISSUER=your-domain.com

# Mercury
MERCURY_API_TOKEN=secret-token:your_mercury_token_here

# Airwallex (producci√≥n)
AIRWALLEX_ENV=prod
AIRWALLEX_CLIENT_ID=your_airwallex_client_id_here
AIRWALLEX_CLIENT_SECRET=your_airwallex_client_secret_here

# Wise
WISE_API_TOKEN=your_wise_api_token_here
WISE_PROFILE_ID=your_wise_profile_id_here
WISE_BASE=https://api.transferwise.com

# Nexo
NEXO_EMAIL=your_nexo_email_here
NEXO_PASSWORD=your_nexo_password_here
NEXO_TOTP_SECRET=your_nexo_totp_secret_here
NEXO_BASE_URL=https://platform.nexo.com

# Twilio (Optional - for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_API_KEY=your_twilio_api_key_here
TWILIO_API_SECRET=your_twilio_api_secret_here
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# Google Sheets (Optional)
GOOGLE_SHEET_ID=your_google_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}
GOOGLE_API_KEY=your_google_api_key_here

# Additional Configuration (Optional)
VERBOSE_LOGS=0
CA_BUNDLE_PATH=/path/to/ca-bundle.pem
JEEVES_REMOTE_WS=ws://remote-chrome:9222
JEEVES_CHROME_BIN=/path/to/chrome
JEEVES_USER_DATA_DIR=/path/to/chrome-profile
JEEVES_CACHE_FILE=/path/to/jeeves-cache.json

# WhatsApp Integration (Optional)
WHATSAPP_API_ENABLED=false
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_WEBHOOK_URL=https://your-webhook-url.com

# Email Integration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SMTP_HOST=smtp.yourdomain.com
SMTP_USER=your_smtp_user_here
SMTP_PASSWORD=your_smtp_password_here

# Telegram Integration (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
